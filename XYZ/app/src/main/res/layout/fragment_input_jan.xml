<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout android:layout_weight="1">

                <TextView
                    android:id="@+id/txv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonselect"
                    android:paddingEnd="40dp"
                    android:paddingStart="@dimen/size5dp"
                    android:text="@string/jan_cd"
                    android:textColor="@color/colorWhite"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/txv_jan_cd_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/backgroundgray"
                    android:hint="@string/jan_code"
                    android:inputType="number"
                    android:paddingLeft="@dimen/size5dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="25dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttonselect"
                    android:gravity="center"
                    android:paddingEnd="38dp"
                    android:paddingLeft="@dimen/size5dp"
                    android:text="@string/number_return"
                    android:textColor="@color/colorWhite"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/txv_inventory_number_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="3"
                    android:background="@drawable/backgroundgray"
                    android:inputType="number"
                    android:paddingLeft="@dimen/size5dp"
                    android:text="1"
                    android:textSize="25dp"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_submit_edit_input"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="150dp"
        android:layout_marginStart="150dp"
        android:background="@color/colorButton"
        android:scaleType="centerCrop"
        android:text="@string/submit_edit"
        android:textColor="@color/colorWhite"/>


</TableLayout>