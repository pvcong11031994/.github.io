<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/txv_id_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonselect">

        <CheckBox
            android:id="@+id/rowCheckBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:checked="false"
            android:padding="5dp"
            android:scaleX="1.7"
            android:scaleY="1.7"
            android:src="@drawable/check01"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/txv_name_header_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="@android:color/transparent"
            android:padding="@dimen/paddingFragmentSetting"
            android:text="@string/rank_arrival"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sizeTextFragmentSetting"/>
    </LinearLayout>

</LinearLayout>