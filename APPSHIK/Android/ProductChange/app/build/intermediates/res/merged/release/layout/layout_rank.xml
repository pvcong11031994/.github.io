<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imb_back"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/return01"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/titleRank"
            android:textColor="@color/colorWhite"
            android:textSize="24dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_arrival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/buttonrank_arrival"
                    android:padding="10dp"
                    android:text="@string/rank_arrival"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp"/>

                <ImageView
                    android:id="@+id/imv_arrival"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/check01"
                    android:visibility="visible"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5px">

                <Button
                    android:id="@+id/btn_platform1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonrank_platform1"
                    android:padding="10dp"
                    android:text="@string/rank_platform1"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp"/>

                <ImageView
                    android:id="@+id/imv_platform1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/check01"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5px">

                <Button
                    android:id="@+id/btn_platform2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonrank_platform2"
                    android:padding="10dp"
                    android:text="@string/rank_platform2"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp"/>

                <ImageView
                    android:id="@+id/imv_platform2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/check01"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5px">

                <Button
                    android:id="@+id/btn_surface"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonrank_surface"
                    android:padding="10dp"
                    android:text="@string/rank_surface"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp"/>

                <ImageView
                    android:id="@+id/imv_surface"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/check01"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5px">

                <Button
                    android:id="@+id/btn_shelter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonrank_shelter"
                    android:padding="10dp"
                    android:text="@string/rank_shelter"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp"/>

                <ImageView
                    android:id="@+id/imv_shelter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/check01"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5px">

                <Button
                    android:id="@+id/btn_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonrank_return"
                    android:padding="10dp"
                    android:text="@string/rank_return"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp"/>

                <ImageView
                    android:id="@+id/imv_return"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/check01"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5px">

                <Button
                    android:id="@+id/btn_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonrank_period"
                    android:padding="10dp"
                    android:text="@string/rank_period"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp"/>

                <ImageView
                    android:id="@+id/imv_period"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/check01"
                    android:visibility="gone"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="-5px">

                <Button
                    android:id="@+id/btn_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonrank_regular"
                    android:padding="10dp"
                    android:text="@string/rank_regular"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp"/>

                <ImageView
                    android:id="@+id/imv_regular"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/transparent"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/check01"
                    android:visibility="gone"/>
            </FrameLayout>

        </TableLayout>
    </ScrollView>
</LinearLayout>
