<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonselect">

        <ImageView
            android:id="@+id/imv_checked"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:elevation="2dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/check01"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/txv_name_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:padding="@dimen/paddingFragmentSetting"
            android:text="@string/rank_arrival"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sizeTextFragmentSetting" />
    </LinearLayout>

</LinearLayout>