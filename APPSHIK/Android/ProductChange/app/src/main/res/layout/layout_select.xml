<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imb_back"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/return01"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="@string/titleSelect"
            android:textColor="@color/colorWhite"
            android:textSize="24dp"/>
    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_catagory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/buttonselect"
                android:padding="15dp"
                android:text="@string/select_cagtagory"
                android:textColor="@color/colorWhite"
                android:textSize="30dp"/>

            <ImageView
                android:id="@+id/imv_catagory"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@android:color/transparent"
                android:elevation="2dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/check01"
                android:visibility="visible"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5px">

            <Button
                android:id="@+id/btn_publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/buttonselect"
                android:padding="15dp"
                android:text="@string/select_publisher"
                android:textColor="@color/colorWhite"
                android:textSize="30dp"/>

            <ImageView
                android:id="@+id/imv_publisher_header"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@android:color/transparent"
                android:elevation="2dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/check01"
                android:visibility="gone"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5px">

            <Button
                android:id="@+id/btn_period_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/buttonselect"
                android:padding="15dp"
                android:text="@string/publish_date"
                android:textColor="@color/colorWhite"
                android:textSize="30dp"/>

            <ImageView
                android:id="@+id/imv_period_date"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@android:color/transparent"
                android:elevation="2dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/check01"
                android:visibility="gone"/>

        </FrameLayout>

    </TableLayout>

</LinearLayout>